<div class="page-content">
  <form action="/car/create/store" method="POST" enctype="multipart/form-data">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/car">Car</a></li>
        <li class="breadcrumb-item"><a href="/car">List Car</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- title %></li>
      </ol>
    </nav>
    <h1 class="page-title"><%- title %></h1>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group row align-items-center">
              <label for="name" class="col-sm-4 col-form-label"
                >Nama <span>*</span></label
              >
              <div class="col-sm-8">
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  placeholder="Masukan nama"
                  required
                />
              </div>
            </div>
            <div class="form-group row align-items-center">
              <label for="harga" class="col-sm-4 col-form-label"
                >Sewa Per Hari <span>*</span></label
              >
              <div class="col-sm-8">
                <input
                  type="number"
                  class="form-control"
                  id="harga"
                  name="price"
                  placeholder="Rp 0,-"
                  min="0"
                  required
                />
              </div>
            </div>
            <div class="form-group row align-items-center">
              <label for="ukuran" class="col-sm-4 col-form-label"
                >Ukuran <span>*</span></label
              >
              <div class="col-sm-8">
                <select
                  class="form-control"
                  id="size_id"
                  name="size_id"
                ></select>
              </div>
            </div>
            <div class="form-group row">
              <label for="foto" class="col-sm-4 col-form-label"
                >Foto <span>*</span></label
              >
              <div class="col-sm-8">
                <div class="custom-file">
                  <input
                    type="file"
                    class="custom-file-input"
                    id="inputGroupFile04"
                    name="image"
                    accept="image/*"
                  />
                  <label
                    class="form-control custom-file-label"
                    for="inputGroupFile04"
                    >Upload foto</label
                  >
                  <small>File size max. 2MB</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="form-action">
      <a href="/car" class="btn btn-outline-primary mr-3">Cancel</a>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
  </form>
</div>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/js/size.js"></script>
<script src="/js/form.js"></script>
